// 将设置放入此文件中以覆盖默认值和用户设置。
{
    // --- go begin --- 
    "go.buildOnSave": "off",
    "go.lintOnSave": "off",
    "go.lintTool": "golint",
    "go.vetOnSave": "off",
    "go.gocodeAutoBuild": true,
    "go.buildFlags": [],
    "go.lintFlags": [],
    "go.vetFlags": [],
    "go.testFlags": ["-v"],
    "go.formatTool": "goimports", // 使用了 useLanguageServer 就用 goimports 
    "go.goroot": "D:/go",
    "go.gopath": "${workspaceRoot}",
    "go.autocompleteUnimportedPackages": true,
    "go.gocodePackageLookupMode": "go",
    "go.gotoSymbol.includeImports": true,
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.inferGopath": false, // 使用模块化后只能 false
    "go.useCodeSnippetsOnFunctionSuggestWithoutType": true,
    "go.liveErrors": {
        "enabled": true,
        "delay": 0
    },
    "go.alternateTools": {
        "go-langserver": "gopls"
    },
    "[go]": {
        "editor.formatOnSave": false
    },
    "go.useLanguageServer": true,
    "files.exclude": {
        "src/github.com/*": true,
    }
}